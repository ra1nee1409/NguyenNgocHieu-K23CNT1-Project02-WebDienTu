@model WebDienTu.Models.SanPham

@{
    ViewData["Title"] = "Tạo sản phẩm mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm p-4" style="max-width: 900px; margin:auto;">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <!-- Cột bên trái: Thông tin cơ bản -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="TenSanPham" class="form-label fw-bold"></label>
                    <input asp-for="TenSanPham" class="form-control" />
                    <span asp-validation-for="TenSanPham" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaDanhMuc" class="form-label fw-bold"></label>
                    <select asp-for="MaDanhMuc" class="form-select" asp-items="ViewBag.MaDanhMuc">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Gia" class="form-label fw-bold"></label>
                    <input asp-for="Gia" class="form-control" />
                    <span asp-validation-for="Gia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GiaBan" class="form-label fw-bold"></label>
                    <input asp-for="GiaBan" class="form-control" />
                    <span asp-validation-for="GiaBan" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Loai" class="form-label fw-bold"></label>
                    <input asp-for="Loai" class="form-control" />
                    <span asp-validation-for="Loai" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="TrangThai" class="form-label fw-bold"></label>
                    <select asp-for="TrangThai" class="form-select">
                        <option value="true">Hiển thị</option>
                        <option value="false">Ẩn</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>

            </div>

            <!-- Cột bên phải: Hình ảnh & thông tin khác -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="HinhAnh" class="form-label fw-bold"></label>
                    <select asp-for="HinhAnh" class="form-select" asp-items="ViewBag.ImageList" id="HinhAnhDropdown">
                        <option value="">-- Chọn hình ảnh --</option>
                    </select>

                    <!-- Thêm input upload ảnh -->
                    <div class="mt-2">
                        <input type="file" name="UploadImage" class="form-control" accept="image/*" />
                    </div>

                    <div class="mt-3 text-center">
                        <img id="previewImage" src="" alt="Preview" class="img-fluid rounded border" style="max-height:250px;" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="SoLuongTon" class="form-label fw-bold"></label>
                    <input asp-for="SoLuongTon" class="form-control" type="number" min="0" />
                    <span asp-validation-for="SoLuongTon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label fw-bold"></label>
                    <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ThuongHieu" class="form-label fw-bold"></label>
                    <input asp-for="ThuongHieu" class="form-control" />
                    <span asp-validation-for="ThuongHieu" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="XuatXu" class="form-label fw-bold"></label>
                    <input asp-for="XuatXu" class="form-control" />
                    <span asp-validation-for="XuatXu" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BaoHanh" class="form-label fw-bold"></label>
                    <input asp-for="BaoHanh" class="form-control" />
                    <span asp-validation-for="BaoHanh" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-end">
            <button type="submit" class="btn btn-success me-2">
                <i class="bi bi-plus-circle"></i> Tạo mới
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Preview khi chọn ảnh từ dropdown
        document.getElementById('HinhAnhDropdown').addEventListener('change', function () {
            var img = document.getElementById('previewImage');
            img.src = this.value;
        });

        // Preview khi upload ảnh trực tiếp
        document.querySelector('input[name="UploadImage"]').addEventListener('change', function (event) {
            var img = document.getElementById('previewImage');
            var file = event.target.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    img.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}
