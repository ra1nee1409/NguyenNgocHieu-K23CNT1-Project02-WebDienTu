@model WebDienTu.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-danger">@ViewData["Title"]</h1>

<div class="card shadow-sm mb-4" style="max-width: 900px; margin:auto;">
    <div class="row g-0">
        <!-- Ảnh sản phẩm -->
        <div class="col-md-5 text-center p-4 bg-light d-flex align-items-center justify-content-center">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="@Model.HinhAnh" class="img-fluid rounded" alt="@Model.TenSanPham" style="max-height: 300px;" />
            }
            else
            {
                <span class="text-muted">Chưa có hình</span>
            }
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-7">
            <div class="card-body">
                <h2 class="card-title mb-3 text-danger">Bạn có chắc muốn xóa sản phẩm này?</h2>

                <table class="table table-borderless table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">Tên sản phẩm</th>
                            <td>@Model.TenSanPham</td>
                        </tr>
                        <tr>
                            <th scope="row">Danh mục</th>
                            <td>@Model.MaDanhMucNavigation?.TenDanhMuc</td>
                        </tr>
                        <tr>
                            <th scope="row">Giá</th>
                            <td>@Model.Gia.ToString("N0") VNĐ</td>
                        </tr>
                        <tr>
                            <th scope="row">Giá bán</th>
                            <td>@Model.GiaBan?.ToString("N0") VNĐ</td>
                        </tr>
                        <tr>
                            <th scope="row">Số lượng tồn</th>
                            <td>@Model.SoLuongTon</td>
                        </tr>
                        <tr>
                            <th scope="row">Trạng thái</th>
                            <td>
                                @if (Model.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hiển thị</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Ẩn</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Mô tả</th>
                            <td>@Model.MoTa</td>
                        </tr>
                        <tr>
                            <th scope="row">Ngày thêm</th>
                            <td>@Model.NgayThem?.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th scope="row">Loại</th>
                            <td>@Model.Loai</td>
                        </tr>
                        <tr>
                            <th scope="row">Thương hiệu</th>
                            <td>@Model.ThuongHieu</td>
                        </tr>
                        <tr>
                            <th scope="row">Xuất xứ</th>
                            <td>@Model.XuatXu</td>
                        </tr>
                        <tr>
                            <th scope="row">Bảo hành</th>
                            <td>@Model.BaoHanh</td>
                        </tr>
                    </tbody>
                </table>

                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="MaSanPham" />
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-2px);
        transition: 0.3s;
    }
</style>
