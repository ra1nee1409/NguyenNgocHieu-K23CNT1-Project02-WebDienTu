@model IEnumerable<WebDienTu.Models.ThuocTinh>

@{
    ViewData["Title"] = "Quản lý Thuộc Tính Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-cogs me-2"></i> Quản lý Thuộc Tính Sản Phẩm</h5>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="fas fa-plus-circle me-1"></i> Thêm mới
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:70%">Tên thuộc tính</th>
                        <th class="text-center" style="width:30%">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenThuocTinh</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ThuocTinhId" class="btn btn-sm btn-warning me-1">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ThuocTinhId" class="btn btn-sm btn-info me-1 text-white">
                                    <i class="fas fa-info-circle"></i> Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ThuocTinhId" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa thuộc tính này?');">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
