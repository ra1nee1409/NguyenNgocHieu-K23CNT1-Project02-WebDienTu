@model WebDienTu.Models.DanhMuc

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Chỉnh sửa danh mục</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="MaDanhMuc" />

                <!-- Tên danh mục -->
                <div class="mb-3">
                    <label asp-for="TenDanhMuc" class="form-label">Tên danh mục</label>
                    <input asp-for="TenDanhMuc" class="form-control" />
                    <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                </div>

                <!-- Mô tả -->
                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label">Mô tả</label>
                    <input asp-for="MoTa" class="form-control" />
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <!-- Nút -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
