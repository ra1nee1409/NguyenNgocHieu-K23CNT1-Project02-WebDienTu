@model WebDienTu.Models.DanhMuc

@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Xóa danh mục</h3>
        </div>
        <div class="card-body">
            <p class="fw-bold text-warning">Bạn có chắc chắn muốn xóa danh mục này?</p>
            <dl class="row">
                <dt class="col-sm-3">Tên danh mục</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TenDanhMuc)</dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MoTa)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-3 d-flex gap-2">
                <input type="hidden" asp-for="MaDanhMuc" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </form>
        </div>
    </div>
</div>
