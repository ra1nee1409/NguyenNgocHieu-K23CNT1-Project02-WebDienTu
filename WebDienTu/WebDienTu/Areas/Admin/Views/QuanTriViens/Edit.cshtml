@model WebDienTu.Models.QuanTriVien

@{
    ViewData["Title"] = "Chỉnh sửa quản trị viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm p-4" style="max-width: 800px; margin:auto;">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MaNguoiDung" />

        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label fw-bold"></label>
                    <input asp-for="HoTen" class="form-control" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MatKhau" class="form-label fw-bold"></label>
                    <input asp-for="MatKhau" class="form-control" type="password" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="VaiTro" class="form-label fw-bold"></label>
                    <select asp-for="VaiTro" class="form-select">
                        <option value="1" selected="@(Model.VaiTro == 1)">Admin</option>
                        <option value="0" selected="@(Model.VaiTro == 0)">User</option>
                    </select>
                    <span asp-validation-for="VaiTro" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NgayDangKy" class="form-label fw-bold"></label>
                    <input asp-for="NgayDangKy" type="date" class="form-control" />
                    <span asp-validation-for="NgayDangKy" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-save"></i> Lưu
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
