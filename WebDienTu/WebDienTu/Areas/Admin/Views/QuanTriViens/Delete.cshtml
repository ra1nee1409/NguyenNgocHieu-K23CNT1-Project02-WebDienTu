@model WebDienTu.Models.QuanTriVien

@{
    ViewData["Title"] = "Xóa quản trị viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-danger">@ViewData["Title"]</h1>

<div class="card shadow-sm mb-4" style="max-width: 900px; margin:auto;">
    <div class="row g-0">
        <!-- Icon đại diện -->
        <div class="col-md-4 text-center p-4 bg-light d-flex align-items-center justify-content-center">
            <i class="bi bi-person-badge fs-1 text-secondary"></i>
        </div>

        <!-- Thông tin quản trị -->
        <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title mb-3 text-danger">Bạn có chắc muốn xóa quản trị viên này?</h2>

                <table class="table table-borderless table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">Họ tên</th>
                            <td>@Model.HoTen</td>
                        </tr>
                        <tr>
                            <th scope="row">Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th scope="row">Vai trò</th>
                            <td>
                                @if (Model.VaiTro == 1)
                                {
                                    <span class="badge bg-primary">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">User</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Ngày đăng ký</th>
                            <td>@Model.NgayDangKy?.ToString("dd/MM/yyyy")</td>
                        </tr>
                    </tbody>
                </table>

                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="MaNguoiDung" />
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-2px);
        transition: 0.3s;
    }
</style>
