@model WebDienTu.Models.DanhGia

@{
    ViewData["Title"] = "Chỉnh sửa đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Chỉnh sửa đánh giá</h2>

<div class="card shadow-sm p-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="MaDanhGia" />

        <div class="mb-3">
            <label asp-for="MaSanPham" class="form-label fw-bold">Sản phẩm</label>
            <select asp-for="MaSanPham" class="form-select" asp-items="ViewBag.MaSanPham"></select>
            <span asp-validation-for="MaSanPham" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MaNguoiDung" class="form-label fw-bold">Người dùng</label>
            <select asp-for="MaNguoiDung" class="form-select" asp-items="ViewBag.MaNguoiDung"></select>
            <span asp-validation-for="MaNguoiDung" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SoSao" class="form-label fw-bold">Số sao</label>
            <input asp-for="SoSao" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="SoSao" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BinhLuan" class="form-label fw-bold">Bình luận</label>
            <textarea asp-for="BinhLuan" class="form-control" rows="3"></textarea>
            <span asp-validation-for="BinhLuan" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NgayDanhGia" class="form-label fw-bold">Ngày đánh giá</label>
            <input asp-for="NgayDanhGia" class="form-control" type="date" />
            <span asp-validation-for="NgayDanhGia" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
            <input type="submit" value="💾 Lưu thay đổi" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
