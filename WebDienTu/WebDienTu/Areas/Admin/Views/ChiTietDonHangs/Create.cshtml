@model WebDienTu.Models.ChiTietDonHang

@{
    ViewData["Title"] = "Thêm chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i> Thêm chi tiết đơn hàng</h5>
            <a asp-action="Index" class="btn btn-sm btn-light">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="MaDonHang" class="form-label fw-bold"></label>
                    <select asp-for="MaDonHang" class="form-select" asp-items="ViewBag.MaDonHang"></select>
                    <span asp-validation-for="MaDonHang" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaSanPham" class="form-label fw-bold"></label>
                    <select asp-for="MaSanPham" class="form-select" asp-items="ViewBag.MaSanPham"></select>
                    <span asp-validation-for="MaSanPham" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SoLuong" class="form-label fw-bold"></label>
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DonGia" class="form-label fw-bold"></label>
                    <input asp-for="DonGia" class="form-control" />
                    <span asp-validation-for="DonGia" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
