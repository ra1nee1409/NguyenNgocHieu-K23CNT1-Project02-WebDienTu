@model WebDienTu.Models.ChiTietDonHang

@{
    ViewData["Title"] = "Xóa chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-trash me-2"></i> Xóa chi tiết đơn hàng</h5>
            <a asp-action="Index" class="btn btn-sm btn-light">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Bạn có chắc chắn muốn <strong>xóa</strong> chi tiết đơn hàng này không?
            </div>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Số lượng</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-secondary">@Model.SoLuong</span>
                </dd>

                <dt class="col-sm-3 fw-bold">Đơn giá</dt>
                <dd class="col-sm-9">
                    <span class="text-success fw-bold">@Model.DonGia.ToString("N0") ₫</span>
                </dd>

                <dt class="col-sm-3 fw-bold">Mã đơn hàng</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary">#@Model.MaDonHangNavigation?.MaDonHang</span>
                </dd>

                <dt class="col-sm-3 fw-bold">Sản phẩm</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success">@Model.MaSanPhamNavigation?.TenSanPham</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-end gap-2">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="MaChiTiet" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Hủy
            </a>
        </div>
    </div>
</div>
