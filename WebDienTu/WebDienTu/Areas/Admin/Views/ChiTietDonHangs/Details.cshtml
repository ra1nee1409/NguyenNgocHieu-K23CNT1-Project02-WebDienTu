@model WebDienTu.Models.ChiTietDonHang

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i> Chi tiết đơn hàng</h5>
            <a asp-action="Index" class="btn btn-sm btn-light">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Số lượng</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-secondary">@Model.SoLuong</span>
                </dd>

                <dt class="col-sm-3 fw-bold">Đơn giá</dt>
                <dd class="col-sm-9">
                    <span class="text-success fw-bold">@Model.DonGia.ToString("N0") ₫</span>
                </dd>

                <dt class="col-sm-3 fw-bold">Mã đơn hàng</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary">#@Model.MaDonHangNavigation?.MaDonHang</span>
                </dd>

                <dt class="col-sm-3 fw-bold">Sản phẩm</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success">@Model.MaSanPhamNavigation?.TenSanPham</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-end gap-2">
            <a asp-action="Edit" asp-route-id="@Model.MaChiTiet" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Đóng
            </a>
        </div>
    </div>
</div>
