@model IEnumerable<WebDienTu.Models.NguoiDungGiamGia>

@{
    ViewData["Title"] = "Danh sách Người Dùng Giảm Giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Thêm mới</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Đã Sử Dụng</th>
            <th>Ngày Nhận</th>
            <th>Chương Trình Giảm Giá</th>
            <th>Người Dùng</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" disabled="disabled" @(item.DaSuDung ? "checked" : "") />
                </td>
                <td>
                    @item.NgayNhan.ToString("dd/MM/yyyy HH:mm")
                </td>
                <td>
                    @item.MaKhuyenMaiNavigation?.TenChuongTrinh
                </td>
                <td>
                    @item.MaNguoiDungNavigation?.Email
                </td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Xem</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"
                       onclick="return confirm('Bạn có chắc muốn xóa mục này không?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
