@model WebDienTu.Models.GiamGia

@{
    ViewData["Title"] = "Thêm mới chương trình giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="fa-solid fa-percent me-2"></i>Thêm chương trình giảm giá
        </h4>
        <a asp-action="Index" class="btn btn-light btn-sm">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="TenChuongTrinh" class="form-label fw-semibold">Tên chương trình</label>
                    <input asp-for="TenChuongTrinh" class="form-control" placeholder="Nhập tên chương trình..." />
                    <span asp-validation-for="TenChuongTrinh" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Loai" class="form-label fw-semibold">Loại giảm giá</label>
                    <select asp-for="Loai" class="form-select">
                        <option value="">-- Chọn loại --</option>
                        <option value="Phần trăm">Phần trăm (%)</option>
                        <option value="Tiền mặt">Tiền mặt (VNĐ)</option>
                    </select>
                    <span asp-validation-for="Loai" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="GiaTri" class="form-label fw-semibold">Giá trị giảm</label>
                    <input asp-for="GiaTri" type="number" step="0.01" min="0" class="form-control" placeholder="Nhập giá trị..." />
                    <span asp-validation-for="GiaTri" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="TrangThai" class="form-label fw-semibold">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-select">
                        <option value="true">Đang hoạt động</option>
                        <option value="false">Ngừng áp dụng</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="NgayBatDau" class="form-label fw-semibold">Ngày bắt đầu</label>
                    <input asp-for="NgayBatDau" type="date" class="form-control" />
                    <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="NgayKetThuc" class="form-label fw-semibold">Ngày kết thúc</label>
                    <input asp-for="NgayKetThuc" type="date" class="form-control" />
                    <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 text-end">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fa-solid fa-floppy-disk me-2"></i>Lưu lại
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
