@model WebDienTu.Models.GiamGia

@{
    ViewData["Title"] = "Chỉnh sửa giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="fa-solid fa-pen-to-square me-2"></i>Chỉnh sửa chương trình giảm giá
        </h4>
        <a asp-action="Index" class="btn btn-light btn-sm">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="MaKhuyenMai" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="TenChuongTrinh" class="form-label fw-semibold"></label>
                    <input asp-for="TenChuongTrinh" class="form-control" placeholder="Nhập tên chương trình..." />
                    <span asp-validation-for="TenChuongTrinh" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Loai" class="form-label fw-semibold"></label>
                    <select asp-for="Loai" class="form-select">
                        <option value="Phần trăm" selected>Phần trăm (%)</option>
                        <option value="Tiền mặt">Tiền mặt (₫)</option>
                    </select>
                    <span asp-validation-for="Loai" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="GiaTri" class="form-label fw-semibold"></label>
                    <input asp-for="GiaTri" class="form-control" placeholder="Nhập giá trị giảm..." />
                    <span asp-validation-for="GiaTri" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="TrangThai" class="form-label fw-semibold d-block"></label>
                    <div class="form-check form-switch">
                        <input asp-for="TrangThai" class="form-check-input" type="checkbox" />
                        <label class="form-check-label">Kích hoạt chương trình</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="NgayBatDau" class="form-label fw-semibold"></label>
                    <input asp-for="NgayBatDau" type="date" class="form-control" />
                    <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="NgayKetThuc" class="form-label fw-semibold"></label>
                    <input asp-for="NgayKetThuc" type="date" class="form-control" />
                    <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fa-solid fa-floppy-disk me-2"></i>Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                    <i class="fa-solid fa-list"></i> Danh sách
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
