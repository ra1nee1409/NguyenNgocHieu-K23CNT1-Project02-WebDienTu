@model List<string>

<div class="hot-keywords" id="HotKeywordsSection">
    <h5 class="mb-3">🔑 Mọi Người Cũng Tìm Kiếm</h5>
    <div class="d-flex flex-wrap gap-2">
        @foreach (var keyword in Model)
        {
            <a href="#" class="badge keyword-link" data-keyword="@keyword">
                @keyword
            </a>
        }
    </div>
</div>

<style>
    /* -------------------
       HOT KEYWORDS (GLOBAL)
    ------------------- */
    #HotKeywordsSection {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 16px;
        background-color: var(--bg-color);
        color: var(--text-color);
        margin-top: 20px;
        margin-bottom: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: background-color 0.3s, color 0.3s, border-color 0.3s;
    }

        #HotKeywordsSection h5 {
            color: var(--text-color);
        }

        #HotKeywordsSection .keyword-link {
            display: inline-block;
            margin-top: 6px;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: normal;
            background-color: var(--nav-bg);
            color: var(--text-color);
            border: 1px solid var(--border-color);
            text-decoration: none;
            transition: all 0.2s ease-in-out;
        }

            #HotKeywordsSection .keyword-link:hover {
                background-color: var(--active-color);
                color: #fff !important;
                text-decoration: none;
            }

    /* =========================
       DARK MODE OVERRIDES
    ========================= */
    [data-theme="dark"] #HotKeywordsSection {
        background-color: #1f1f1f;
        border-color: #333;
        color: #f1f1f1;
        box-shadow: 0 2px 6px rgba(0,0,0,0.5);
    }

        [data-theme="dark"] #HotKeywordsSection h5 {
            color: #f1f1f1;
        }

        [data-theme="dark"] #HotKeywordsSection .keyword-link {
            background-color: #2c2c2c;
            color: #f1f1f1;
            border-color: #444;
        }

            [data-theme="dark"] #HotKeywordsSection .keyword-link:hover {
                background-color: #66b2ff;
                color: #fff !important;
            }
</style>
