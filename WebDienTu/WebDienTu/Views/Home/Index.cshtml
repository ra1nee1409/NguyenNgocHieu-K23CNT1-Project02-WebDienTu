        //             }
        //         });
        //     }
        // });
         // ========================
            // 🔥 Nút Xem Thêm
            // ========================
           function initXemThem() {
            const btn = document.getElementById("btnXemThem");
            if (btn) {
                btn.addEventListener("click", function () {
                    document.querySelectorAll(".hidden-product").forEach(el => el.classList.remove("d-none"));
                    btn.style.display = "none";
                });
            }
        }
                 // ========================
                    // 🔍 Lọc theo tiêu chí (giá, ngày thêm)
                // ========================
        $("#sortSelect").on("change", function () {
            var tieuChi = $(this).val();

            // ✅ Lấy mã danh mục hiện tại đang active
            var madm = $("#LoaiFilterNav a.active").data("madm");

            $.get("/Home/LocTheoTieuChi", { tieuChi: tieuChi, madm: madm })
                .done(function (res) {
                    $("#SanPhamList").html(res);
                })
                .fail(function () {
                    alert("Lỗi khi lọc sản phẩm theo tiêu chí!");
                });
        });


        // Gọi khi load trang
        initXemThem();

        // Gọi lại khi load partial view AJAX
        $(document).ajaxComplete(function () {
            initXemThem();
        });




        });
    </script>
