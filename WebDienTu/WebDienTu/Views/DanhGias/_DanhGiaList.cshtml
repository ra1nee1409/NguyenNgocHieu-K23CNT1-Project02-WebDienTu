@model List<WebDienTu.Models.DanhGia>

@if (Model != null && Model.Any())
{
    foreach (var dg in Model.OrderByDescending(d => d.NgayDanhGia))
    {
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="d-flex align-items-center">
                        <i class="fa-solid fa-user-circle fa-2x text-primary me-2"></i>
                        <div>
                            <strong>@(dg.MaNguoiDungNavigation?.HoTen ?? "Người dùng")</strong><br />
                            <small class="text-muted">
                                @dg.NgayDanhGia?.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                    <!-- Hiển thị số sao -->
                    <div>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= dg.SoSao)
                            {
                                <i class="fa-solid fa-star text-warning"></i>
                            }
                            else
                            {
                                <i class="fa-regular fa-star text-warning"></i>
                            }
                        }
                    </div>
                </div>

                <!-- Nội dung bình luận -->
                <p class="mb-0">@dg.BinhLuan</p>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-info text-center">
        <i class="fa-regular fa-comment"></i> Chưa có bình luận nào.
    </div>
}
