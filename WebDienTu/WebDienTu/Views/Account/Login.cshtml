@{
    ViewData["Title"] = "Đăng nhập";
}
<link href="~/css/Login.css" rel="stylesheet" />
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg rounded-3 p-4" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Đăng nhập</h2>
            <p class="text-muted">Nhập thông tin tài khoản của bạn</p>
        </div>

        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="text" class="form-control" id="email" name="email" placeholder="example@email.com" required />
                </div>
            </div>

            <div class="mb-3">
                <label for="matKhau" class="form-label">Mật khẩu</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="matKhau" name="matKhau" placeholder="********" required />
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 fw-bold">Đăng nhập</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
        }

        <div class="mt-3 text-center">
            <small class="text-muted">Chưa có tài khoản? <a asp-controller="Account" asp-action="Register">Đăng ký</a></small>
        </div>
    </div>
</div>


