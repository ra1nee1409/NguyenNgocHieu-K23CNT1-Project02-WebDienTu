@model WebDienTu.Models.QuanTriVien
@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml"; // hoặc layout User riêng nếu bạn có
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fa-solid fa-user me-2"></i> Thông tin cá nhân</h2>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3">Họ tên:</dt>
            <dd class="col-sm-9">@Model.HoTen</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Ngày đăng ký:</dt>
            <dd class="col-sm-9">@(Model.NgayDangKy?.ToString("dd/MM/yyyy") ?? "Chưa có")</dd>

            <dt class="col-sm-3">Vai trò:</dt>
            <dd class="col-sm-9">
                @(Model.VaiTro == 1 ? "Quản trị viên" : "Người dùng")
            </dd>
        </dl>

        <div class="mt-3">
            <a asp-action="EditProfile" class="btn btn-warning">
                <i class="fa-solid fa-pen-to-square me-1"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                <i class="fa-solid fa-house me-1"></i> Về trang chủ
            </a>
        </div>
    </div>
</div>
