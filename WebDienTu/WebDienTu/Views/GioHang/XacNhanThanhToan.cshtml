@model IEnumerable<WebDienTu.Models.GioHangTam>
@{
    ViewData["Title"] = "Xác nhận thanh toán";
}

<h2>Xác nhận thanh toán</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSanPhamNavigation.TenSanPham</td>
                <td>@item.SoLuong</td>
                <td>@String.Format("{0:N0} đ", item.MaSanPhamNavigation.GiaBan ?? item.MaSanPhamNavigation.Gia)</td>
                <td>@String.Format("{0:N0} đ", item.SoLuong * (item.MaSanPhamNavigation.GiaBan ?? item.MaSanPhamNavigation.Gia))</td>
            </tr>
        }
    </tbody>
</table>

<h4 class="text-end">Tổng tiền: <b>@String.Format("{0:N0} đ", ViewBag.TongTien)</b></h4>

<form asp-action="ThanhToanGioHang" method="post">
    <button type="submit" class="btn btn-success">Xác nhận thanh toán</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại giỏ hàng</a>
</form>
