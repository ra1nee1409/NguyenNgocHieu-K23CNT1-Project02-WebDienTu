@* TtaBanner.cshtml *@

@* Load Bootstrap CSS (nếu Layout chưa có) *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

@* Load CSS custom *@
<link href="~/css/BannerNavUse.css" rel="stylesheet" />

<div id="ttaCarousel" class="carousel slide tta-carousel" data-bs-ride="carousel" data-bs-interval="4000">
    <!-- Indicator nút tròn -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#ttaCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#ttaCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#ttaCarousel" data-bs-slide-to="2"></button>
    </div>

    <!-- Hình ảnh -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/BanneUse/01.jpg" class="d-block w-100 tta-carousel-image" alt="Laptop">
            <div class="carousel-caption tta-caption">
                <h5>💻 Laptop & PC Gaming</h5>
                <p>Cấu hình mạnh mẽ – Giá tốt – Bảo hành chính hãng</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/BanneUse/02.jpg" class="d-block w-100 tta-carousel-image" alt="Smartphone">
            <div class="carousel-caption tta-caption">
                <h5>📱 Điện thoại thông minh</h5>
                <p>Hàng mới nhất – Chính hãng 100% – Giao hàng tận nơi</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/BanneUse/04.jpg" class="d-block w-100 tta-carousel-image" alt="Phụ kiện">
            <div class="carousel-caption tta-caption">
                <h5>🎧 Phụ kiện & Âm thanh</h5>
                <p>Tai nghe, loa, bàn phím, chuột... đủ loại cho bạn lựa chọn</p>
            </div>
        </div>
    </div>

    <!-- Nút điều hướng -->
    <button class="carousel-control-prev" type="button" data-bs-target="#ttaCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#ttaCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

@* Load Bootstrap JS + PopperJS (nếu Layout chưa có) *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var carousel = document.querySelector('#ttaCarousel');

        // Khi carousel thay đổi slide
        carousel.addEventListener('slide.bs.carousel', function (e) {
            var captions = e.relatedTarget.querySelectorAll('.tta-caption');
            captions.forEach(function (caption) {
                caption.classList.remove('show-caption');
            });
        });

        // Khi slide vừa active
        carousel.addEventListener('slid.bs.carousel', function (e) {
            var captions = e.relatedTarget.querySelectorAll('.tta-caption');
            captions.forEach(function (caption) {
                caption.classList.add('show-caption');
            });
        });

        // Kích hoạt caption cho slide đầu tiên
        var firstCaptions = carousel.querySelectorAll('.carousel-item.active .tta-caption');
        firstCaptions.forEach(function (caption) {
            caption.classList.add('show-caption');
        });
    });
</script>
